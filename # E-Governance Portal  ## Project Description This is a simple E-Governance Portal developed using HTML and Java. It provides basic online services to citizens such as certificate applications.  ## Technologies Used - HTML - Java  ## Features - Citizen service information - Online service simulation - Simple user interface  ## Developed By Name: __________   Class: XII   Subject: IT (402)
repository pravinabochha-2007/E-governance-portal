import java.util.Scanner;

public class CitizenPortal {

    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);

        System.out.println("Welcome to E-Governance Portal");
        System.out.println("1. Apply for Birth Certificate");
        System.out.println("2. Apply for Income Certificate");
        System.out.println("3. Apply for Voter ID");

        System.out.print("Enter your choice: ");
        int choice = sc.nextInt();

        switch (choice) {
            case 1:
                System.out.println("Birth Certificate application submitted successfully.");
                break;
            case 2:
                System.out.println("Income Certificate application submitted successfully.");
                break;
            case 3:
                System.out.println("Voter ID application submitted successfully.");
                break;
            default:
                System.out.println("Invalid choice.");
        }

        sc.close();
    }
}
